# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/usermanagement

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-this
JWT_ACCESS_EXPIRY=15m

# CORS
CORS_ORIGIN=*

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3001

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
# Alternative: use individual credentials
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USER=guest
# RABBITMQ_PASS=guest
RABBITMQ_EXCHANGE=events
RABBITMQ_ROUTE_INVITE=user.invite.created

# Email/SMTP Configuration (used by notification service)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM="User Management System" <noreply@example.com>
